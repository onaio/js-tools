{
    "name": "@onaio/redux-persist-helper",
    "version": "0.0.1",
    "description": "Utility Library to allow synchronizing redux state with local storage",
    "main": "dist/index.js",
    "types": "dist/types",
    "author": "Ona Engineering",
    "license": "Apache-2.0",
    "private": false,
    "bugs": {
        "url": "https://github.com/onaio/js-tools/issues"
    },
    "scripts": {
