    "@types/react-redux": "^7.1.7",
    "@types/redux-testkit": "^1.0.3",
    "redux-testkit": "^1.0.6",
    "redux-thunk": "^2.3.0"
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  },
  "dependencies": {
    "@onaio/redux-reducer-registry": "^0.0.9"
